<%- include('partials/head') %>
    <h1>Our Team</h1>

    <form action="/api/v1/users/view" method="GET" class="filter-form">
        <input type="text" name="search" placeholder="Search users..." value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
        <select name="sort">
            <option value="newest" <%= currentSort === 'newest' ? 'selected' : '' %>>Newest First</option>
            <option value="oldest" <%= currentSort === 'oldest' ? 'selected' : '' %>>Oldest First</option>
            <option value="name_asc" <%= currentSort === 'name_asc' ? 'selected' : '' %>>Name: A-Z</option>
            <option value="name_desc" <%= currentSort === 'name_desc' ? 'selected' : '' %>>Name: Z-A</option>
        </select>
        <button type="submit" class="btn btn-primary">Apply</button>
        <a href="/api/v1/users/view" class="btn-link">Clear</a>
    </form>

    <div class="card-grid">
        <% users.forEach(user => { %>
            <div class="card">
                <div class="avatar"><%= user.name.charAt(0).toUpperCase() %></div>
                <h3><%= user.name %></h3>
                <p class="subtitle">Joined <%= new Date(user.createdAt).toLocaleDateString() %></p>
                <div class="card-actions">
                    <form action="/api/v1/users/delete/<%= user._id %>" method="POST">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this user?')">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>

    <div class="add-form">
        <h2>Add a New User</h2>
        <form action="/api/v1/users/submit-form" method="POST">
            <input type="text" name="name" placeholder="User Name" required>
            <button type="submit" class="btn btn-success">Create User</button>
        </form>
    </div>
<%- include('partials/footer') %>
